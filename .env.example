# Home Assistant Configuration
HA_URL=http://192.168.1.110:8123
HA_TOKEN=your_long_lived_access_token_here

# Cloudflare Access Configuration (optional, if HA is behind CF Access)
CF_ACCESS_CLIENT_ID=your_cf_client_id_here
CF_ACCESS_CLIENT_SECRET=your_cf_client_secret_here

# InfluxDB Configuration
INFLUX_URL=http://influxdb:8086
INFLUX_TOKEN=your_influxdb_token_here
INFLUX_ORG=your_org_name
INFLUX_BUCKET=heater
INFLUX_ADMIN_USER=admin
INFLUX_ADMIN_PASSWORD=your_secure_password

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# Discord Webhook (optional, for alerts)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# Logging
LOG_LEVEL=INFO

# Control Service Configuration
HEATER_ON_TEMP=25.0
HEATER_OFF_TEMP=26.0
MIN_CYCLE_TIME_SECONDS=180
SENSOR_STALE_TIMEOUT_SECONDS=300

# Data Collection Configuration
TEMP_POLL_INTERVAL_SECONDS=60
WEATHER_POLL_INTERVAL_SECONDS=300
ELECTRICITY_POLL_INTERVAL_SECONDS=86400

# Home Assistant Entity IDs
HA_TEMP_SENSOR_ID=sensor.temperature
HA_HUMIDITY_SENSOR_ID=sensor.humidity
HA_HEATER_CLIMATE_ID=climate.heater
HA_WEATHER_ENTITY_ID=weather.home
HA_ELECTRICITY_SENSOR_ID=sensor.electricity_usage
